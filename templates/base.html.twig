       {% if app.user %}
                      
       <li class="nav-item ">
        <a class="nav-link" >{{ app.user.nom }} {{ app.user.prenom }}</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('app_logout') }}">DÃ©connexion</a>
      </li>
      

       {% else %}
       <li class="nav-item ">
        <a class="nav-link" href="{{ path('register') }}">Inscription</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
      </li>
      
       {% endif %}
     
    </ul>
    
  </div>
</nav>
